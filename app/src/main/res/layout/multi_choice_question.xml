<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|top"
    android:layout_marginLeft="20px"
    android:layout_marginTop="20px"
    android:columnCount="1"
    android:orientation="horizontal"
    android:id = "@+id/multiChoiceGrid"


    >

    <TextView

        android:layout_row="0"
        android:id="@+id/multiChoiceContent"
        android:textSize="10pt"


    />

    <RadioButton
        android:layout_row="1"
        android:id="@+id/multiChoiceButton1"
        android:textColor="#000000"
        android:textSize="10pt"
        android:visibility="gone"

        />

    <RadioButton
        android:layout_row="2"
        android:id="@+id/multiChoiceButton2"
        android:textColor="#000000"
        android:textSize="10pt"
        android:visibility="gone"

        />

    <RadioButton
        android:layout_row="3"
        android:id="@+id/multiChoiceButton3"
        android:textColor="#000000"
        android:textSize="10pt"
        android:visibility="gone"

        />

    <RadioButton
        android:layout_row="4"
        android:id="@+id/multiChoiceButton4"
        android:textColor="#000000"
        android:textSize="10pt"
        android:visibility="gone"

        />

    <RadioButton
        android:layout_row="5"
        android:id="@+id/multiChoiceButton5"
        android:textColor="#000000"
        android:textSize="10pt"
        android:visibility="gone"

        />

    <RadioButton
        android:layout_row="6"
        android:id="@+id/multiChoiceButton6"
        android:textColor="#000000"
        android:textSize="10pt"
        android:visibility="gone"

        />



</GridLayout>