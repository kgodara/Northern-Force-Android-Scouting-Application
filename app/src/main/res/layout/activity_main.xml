<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id = "@+id/titleScreen"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:id = "@+id/title"
        android:textSize="24dp"
        android:text="Complete Data Manager"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:id = "@+id/name"
        android:textSize="14dp"
        android:text="By Karan Godara"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:id = "@+id/makeLayout"
        android:layout_below="@+id/name"
        android:textSize="24dp"
        android:text = "Make a Layout"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/makeLayout"
        android:background="@android:color/darker_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:id = "@+id/titleScreenEnterData"
        android:layout_below="@+id/makeLayout"
        android:textSize="24dp"

        android:text = "Enter Data"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:id = "@+id/titleScreenViewData"
        android:layout_below="@+id/titleScreenEnterData"
        android:textSize="24dp"
        android:text = "View Data"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:id = "@+id/exportData"
        android:layout_below="@+id/titleScreenViewData"
        android:textSize="24dp"
        android:text = "Transfer Data"/>



    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/exportData"
        android:background="@android:color/darker_gray" />


    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id = "@+id/howToUse"
        android:layout_below="@+id/exportData"
        android:textSize="24dp"
        android:text = "How To Use"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id = "@+id/about"
        android:layout_below="@+id/howToUse"
        android:textSize="24dp"
        android:text = "About"/>










</RelativeLayout>
